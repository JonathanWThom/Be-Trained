<p><%= @workout.try(:date).try(:strftime, ('%a %d %b %Y')) %></p>
<p><%= simple_format(@workout.workout) %><p>
<p><%= simple_format(@workout.coach_notes) %>
<% if current_coach %>
  <p><%= link_to 'Edit Workout', edit_athlete_workout_path(@athlete, @workout), remote: true %></p>
<% end %>
<h4>Results</h4>
<div id="workout-results">
  <%= render 'workout_results' %>
</div>
<% if @tomorrow %>
  <p><%= link_to "Tomorrow", athlete_workout_path(@athlete, @tomorrow) %></p>
<% end %>
<% if @yesterday %>
  <p><%= link_to "Yesterday", athlete_workout_path(@athlete, @yesterday) %></p>
<% end %>
