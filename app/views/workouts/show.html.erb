<div class="container">
  <div class="clients">
    <p><%= @workout.try(:date).try(:strftime, ('%a %d %b %Y')) %>
    <p><%= simple_format(@workout.workout) %><p>
    <p><%= @workout.coach_notes %>
    <h4>Results</h4>
    <!--edit button -->
    <%= @workout.results %>
    <% if @tomorrow %>
      <p><%= link_to "Tomorrow", athlete_workout_path(@athlete, @tomorrow) %></p>
    <% end %>
    <% if @yesterday %>
    <p><%= link_to "Yesterday", athlete_workout_path(@athlete, @yesterday) %></p>
    <% end %>
  </div>
  <% if current_athlete && current_athlete == @athlete %>
    <div class="client">
      <%= form_for [@athlete, @workout], method: "patch" do |f| %>
        <%= f.text_area :results %>
        <%= f.text_area :athlete_notes %>
        <%= f.submit 'Submit Results' %>
      <% end %>
    </div>
  <% end %>


