<% if current_athlete && current_athlete == @athlete %>
  <div class="coach-registration coach-box" >
    <%= form_for [@athlete, @workout], method: "patch", remote: true do |f| %>
    <%= f.label :results %>
    <%= f.text_area :results, :class => 'big-field'%>
    <%= f.label :athlete_notes %>
    <%= f.text_area :athlete_notes, :class => 'medium-field' %>
    <%= f.submit 'Submit Results', :class => 'btn home-btn' %>
    <% end %>
  </div>
<% end %>

<% if current_coach && current_coach == @athlete.coach %>
  <div class="coach-registration coach-box">
    <%= form_for [@athlete, @workout], method: "patch", remote: true do |f| %>
      <%= f.label :date %>
      <%= f.date_field :date %>
      <%= f.label :workout %>
      <%= f.text_area :workout, :class => 'big-field' %>
      <%= f.label :coach_notes %>
      <%= f.text_area :coach_notes, :class => 'medium-field' %>
      <%= f.submit 'Update Workout', :class => 'btn home-btn' %>
    <% end %>
  </div>
<% end %>
