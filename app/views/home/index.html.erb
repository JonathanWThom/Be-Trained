<div class="home-container">
  <div class="home-intro">
    <h1>BeTrained</h1>
    <div id="border"></div>
    <h3 class="home-description">Share workouts, feedback, and instruction with your training clients. Give yourself more time to focus on what you do best: coaching.</h3>
    <div class="row home-buttons-large">
      <% if !current_coach && !current_athlete %>
        <div class="col s3">
          <%= button_to "Learn More", about_index_path, :class => 'btn home-btn', :method => :get %>
        </div>
        <div class="col s3">
          <%= button_to "Register as a Coach", new_coach_registration_path, :class => "btn home-btn", :method => :get %>
        </div>
        <div class="col s3">
          <%= button_to "Coach Sign In", new_coach_session_path, :class => "btn home-btn", :method => :get %>
        </div>
        <div class="col s3">
          <%= button_to "Athlete Sign In", new_athlete_session_path, :class => "btn home-btn", :method => :get %>
        </div>
      <% elsif current_coach %>
        <div class="col s3"></div>
        <div class="col s3">
          <%= button_to "Coach Console", coach_path(current_coach), class: 'btn btn-home', :method => :get %></li>
        </div>
        <div class="col s3">
          <%= button_to "Log Out", destroy_coach_session_path, method: :delete, class: 'btn btn-home' %>
        </div>
        <div class="col s3"></div>
      <% elsif current_athlete %>
        <div class="col s3"></div>
        <div class="col s3">
          <%= button_to "My Profile", coach_athlete_path(current_athlete.coach, current_athlete), class: 'btn btn-home', :method => :get %>
        </div>
        <div class="col s3">
          <%= button_to "Log Out", destroy_athlete_session_path, method: :delete, class: 'btn btn-home' %>
        </div>
        <div class="col s3"></div>
      <% end %>

    </div>
    <div class="row home-buttons-small">
      <% if !current_coach && !current_athlete %>
        <%= button_to "Learn More", about_index_path, :class => 'btn home-btn', :method => :get %>
        <%= button_to "Register as a Coach", new_coach_registration_path, :class => "btn home-btn", :method => :get %>
        <%= button_to "Coach Sign In", new_coach_session_path, :class => "btn home-btn", :method => :get %>
        <%= button_to "Athlete Sign In", new_athlete_session_path, :class => "btn home-btn", :method => :get %>
      <% elsif current_coach %>
        <%= button_to "Coach Console", coach_path(current_coach), class: 'btn home-btn', :method => :get %>
        <%= button_to "Log Out", destroy_coach_session_path, method: :delete, class: 'btn home-btn' %>
      <% elsif current_athlete %>
        <%= button_to "My Profile", coach_athlete_path(current_athlete.coach, current_athlete), class: 'btn home-btn', :method => :get %>
        <%= button_to "Log Out", destroy_athlete_session_path, method: :delete, class: 'btn home-btn' %>
      <% end %>
    </div>
  </div>
</div>
